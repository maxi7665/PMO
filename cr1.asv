%x2 = @(x1) (20 - 4 * x1) / 4;

x2_1 = @(x1) (4 - x1.*1) ./ 2;
x2_2 = @(x1) (6 - 2 .* x1);
x2_3 = @(x1) 8 - x1;
x2_4 = @(x1) 0;

hold on;

fplot(x2_1, DisplayName="x1+2x2<=4");
fplot(x2_2, DisplayName="2x1 + x2 <= 6");
fplot(x2_3, DisplayName="x1 + x2 >= 8");
legend();
xline(0, '-', '');
yline(0, '-', ''); 



hold off;